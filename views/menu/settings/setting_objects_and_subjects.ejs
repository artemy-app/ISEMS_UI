<!DOCTYPE html>
<html lang="ru" xmlns="http://www.w3.org/1999/html">
<head>
    <!-- подключаем дополнительные библиотеки, скрипты, таблицы стилей CSS и расширения -->
    <% include ../../head.ejs %>

    <script src="/dist/settingSourcesPage.js"></script>

</head>
<body>
<!-- контент страницы -->
<section id="container" >
    <!-- ***************************************************************************************************************
     ОСНОВНОЕ МЕНЮ
    ********************************************************************************************************************-->
    <% include ../../header.ejs %>

    <!-- ***************************************************************************************************************
         МОДАЛЬНОЕ ОКНО ВЫВОДА ПОЛНОЙ ИНФОРМАЦИИ ОБ УДАЛЕННЫХ ХОСТАХ
    ******************************************************************************************************************** -->
    <div class="modal fade" id="modalShowRemoteHosts" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-show="data">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- заголовок -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <!-- Основная часть модального окна -->
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <!-- ***************************************************************************************************************
         МОДАЛЬНОЕ ОКНО ДОБАВЛЕНИЯ ИЛИ РЕДАКТИРОВАНИЯ ИНФОРМАЦИИ ОБ УДАЛЕННЫХ ХОСТАХ
    ******************************************************************************************************************** -->
    <% include ../../modal_windows/management_sources.ejs %>

    <!-- ***************************************************************************************************************
         МОДАЛЬНОЕ ОКНО ПОДТВЕРЖДЕНИЯ УДАЛЕНИЯ УДАЛЕННОГО ХОСТА
    ******************************************************************************************************************** -->
    <% include ../../modal_windows/removal_request_delete.ejs %>

    <!-- ***************************************************************************************************************
     МОДАЛЬНОЕ ОКНО ПРОГРЕСС БАР
    ******************************************************************************************************************** -->

    <div class="modal fade" id="modalProgressBar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-show="data">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!-- заголовок -->
                <div class="modal-header">
                    <h4 class="modal-title">Загрузка файла</h4>
                </div><br>
                <!-- основной контент -->
                <div class="modal-body text-center">
                    <div class="progress">
                        <div class="progress-bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ***************************************************************************************************************
         ГЛАВНЫЙ КОНТЕНТ
    ******************************************************************************************************************** -->
    <!--начало основного контента-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <%
                    let disabledCreate = (userGroupPermissions.create.status === false) ? 'disabled="disabled"' : '';
                    let disabledEdit = (userGroupPermissions.edit.status === false) ? 'disabled="disabled"' : '';
                    let disabledDelete = (userGroupPermissions.delete.status === false) ? 'disabled="disabled"' : '';

                    let countSources = Object.keys(mainInformation).length;
                    %>
                    <div class="table-responsive" style="margin-left: 10px; margin-right: 10px;">
                        <table class="table table-striped table-hover table-sm">
                            <caption>
                                <div class="h4 text-uppercase">управление источниками</div>
                                <div>Всего источников: <strong><%= countSources %></strong></div>
                            </caption>
                            <thead>
                            <tr>
                                <th>Идентификатор</th>
                                <th>Название</th>
                                <th>Дата создания</th>
                                <th>Дата изменения</th>
                                <th class="text-right">
                                    <!-- добавление информации -->
                                    <button id="addSource" type="button" class="btn btn-default btn-sm" <%= disabledCreate %>>
                                        <span class="glyphicon glyphicon-plus"></span> добавить
                                    </button>

                                    <!-- импорт информации -->
                                    <button type="button" class="btn btn-default btn-sm btn-file">
                                        <span class="glyphicon glyphicon-import"></span> импорт<input id="fileUpload" type="file">
                                    </button>

                                    <!-- экспорт информации -->
                                    <button type="button" id="exportFile" class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-export"></span> экспорт
                                    </button>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                                <%
                                if(countSources > 0){
                                    mainInformation.forEach(function (obj) {
                                        let x = (new Date()).getTimezoneOffset() * 60000;
                                        let dateRegister = (new Date((+obj.date_register) - x)).toISOString().slice(0,-1).replace(/T/, ' ').replace(/\..+/, '');
                                        let dateChange = (new Date((+obj.date_change) - x)).toISOString().slice(0,-1).replace(/T/, ' ').replace(/\..+/, '');
                                    %>
                                        <tr>
                                            <td class="text-left" style="padding-top: 15px;"><%= obj.id %></td>
                                            <td class="text-left" style="padding-top: 15px;"><%= obj.short_name %></td>
                                            <td class="text-left" style="padding-top: 15px;"><%= dateRegister %></td>
                                            <td class="text-left" style="padding-top: 15px;"><%= dateChange %></td>
                                            <!-- просмотр информации, её редактирование и удаление -->
                                            <td class="text-right">
                                                <button type="button" class="btn btn-default btn-sm" name="sourceInformation">
                                                    <span class="glyphicon glyphicon glyphicon-info-sign"></span>
                                                </button>
                                                <button type="button" class="btn btn-default btn-sm" name="sourceEdit" <%= disabledEdit %>>
                                                    <span class="glyphicon glyphicon-floppy-saved"></span>
                                                </button>
                                                <button type="button" class="btn btn-default btn-sm" name="sourceDelete" <%= disabledDelete %>>
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </td>
                                        </tr>
                                    <%
                                });
                                }
                                %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </section>

    <!-- ***************************************************************************************************************
     ПОДВАЛ САЙТА
    ********************************************************************************************************************-->
    <% include ../../footer.ejs %>
</section>
</body>
</html>